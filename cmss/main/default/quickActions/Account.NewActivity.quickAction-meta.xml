<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Creates new Task from Account</description>
    <fieldOverrides>
        <field>ActivityDate</field>
        <formula>TODAY() + 14</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Author__c</field>
        <formula>$User.FirstName + &apos; &apos; +  $User.LastName</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Category__c</field>
        <literalValue>3</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>CreatedDate__c</field>
        <formula>NOW()</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Email__c</field>
        <formula>Account.PersonContact.Email</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Location__c</field>
        <formula>IF( NOT(ISBLANK(Account.BillingAddress)),
			Account.BillingStreet + &apos;, &apos; +
	  Account.BillingCity + &apos;, &apos; +
	  Account.BillingPostalCode  + &apos;, &apos; +
	  Account.BillingCountry, 
			&apos; &apos;)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>OwnerId</field>
        <formula>$User.Id</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>PersonalIdentificationNr__c</field>
        <formula>Account.PersonalIdentificationNr__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Phone__c</field>
        <formula>Account.Phone</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Priority</field>
        <literalValue>Normal</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Source__c</field>
        <literalValue>73</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Status</field>
        <literalValue>0</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>StatusReason__c</field>
        <literalValue>1</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Type</field>
        <literalValue>1</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>ValidFrom__c</field>
        <formula>NOW()</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>ValidTo__c</field>
        <formula>TODAY() + 104</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>WhatId</field>
        <formula>Account.Id</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>WhoId</field>
        <formula>Account.PersonContactId</formula>
    </fieldOverrides>
    <label>New Activity</label>
    <optionsCreateFeedItem>true</optionsCreateFeedItem>
    <quickActionLayout>
        <layoutSectionStyle>TwoColumnsLeftToRight</layoutSectionStyle>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Subject</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Description</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>PlannedFromDate__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Type</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>ActivityDate</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>PlannedToDate__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
    </quickActionLayout>
    <successMessage>New Activity was created</successMessage>
    <targetObject>Task</targetObject>
    <targetParentField>What</targetParentField>
    <targetRecordType>Task.Task</targetRecordType>
    <type>Create</type>
</QuickAction>
