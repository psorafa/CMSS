<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CaseSourceEquals3</fullName>
    <active>true</active>
    <description>If Source = 3, Institution Type is required</description>
    <errorConditionFormula>ISPICKVAL(Source__c, &quot;3&quot;) &amp;&amp;
ISBLANK(TEXT(InstitutionType__c))</errorConditionFormula>
    <errorDisplayField>InstitutionType__c</errorDisplayField>
    <errorMessage>If Source equals 3, Institution Type is required.</errorMessage>
</ValidationRule>
