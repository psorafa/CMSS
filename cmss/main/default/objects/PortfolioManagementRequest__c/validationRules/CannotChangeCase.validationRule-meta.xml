<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CannotChangeCase</fullName>
    <active>true</active>
    <description>Once created, field Case cannot be modified.</description>
    <errorConditionFormula>NOT(ISNEW()) &amp;&amp; 
ISCHANGED(Case__c)</errorConditionFormula>
    <errorDisplayField>Case__c</errorDisplayField>
    <errorMessage>This field cannot be edited.</errorMessage>
</ValidationRule>
