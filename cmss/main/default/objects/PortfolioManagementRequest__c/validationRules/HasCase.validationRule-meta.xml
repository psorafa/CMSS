<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HasCase</fullName>
    <active>true</active>
    <description>For newly created Portfolio Management Request, field Case must be filled.</description>
    <errorConditionFormula>ISNEW() &amp;&amp;
ISBLANK(Case__c)</errorConditionFormula>
    <errorDisplayField>Case__c</errorDisplayField>
    <errorMessage>Case is required field.</errorMessage>
</ValidationRule>
