<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LimitPhoneToLessThan20Chars</fullName>
    <active>true</active>
    <errorConditionFormula>LEN( Phone__c ) &gt; 20</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Length must be less than 20 characters.</errorMessage>
</ValidationRule>
