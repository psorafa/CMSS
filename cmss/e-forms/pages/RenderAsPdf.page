<apex:page id="RenderAsPdf" controller="DisplayPDFController" renderAs="advanced_pdf" applyHtmlTag="false"
           showHeader="false" cache="true"
           readOnly="true" applyBodyTag="false">
    <!-- renderAs="advanced_pdf" -->
    <apex:includeScript value="{!$Resource.pdf417}"/>
    <apex:includeScript value="{!$Resource.bcmath}"/>
    <!--    <apex:stylesheet value="{!$Resource.styleTest}"/>-->
    <html>

    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
        <style type="text/css">
            @page {
                size: A4 portrait;
                /* border: 1px solid black; */
                padding-left: 5px;
                padding-right: 5px;
                margin: 1em;
            }

            @font-face {
                font-family: 'Arial Unicode MS';
            }

            body {
                font-size: 10px;
                font-family: 'Arial Unicode MS';
                /* width: 210mm; */
                /* border: 1px solid black; */
                color: rgb(94, 93, 93);
                line-height: 1.3;
            }

            .float_left {
                float: left;
            }

            .float_right {
                float: right;
            }

            .float_fix {
                clear: both;
            }

            .bold {
                color: black;
                font-size: 1.em;
                /* font-weight: bold; */
            }

            .size_small {
                font-size: 0.857em;
            }

            .size_normal {
                font-size: 1em;
            }

            .size_medium {
                font-size: 1.143em;
            }

            .size_big {
                font-size: 1.428em;
            }

            .size_bigger {
                font-size: 2.571em;
                font-size: 2.1em;
            }

            .line_height {
                line-height: 2;
            }

            p {
                line-height: 1.1;
                margin: 0px;
                padding: 0px;
                font-size: 9px;
            }

            span {
                margin-top: 0px;
            }

            .padding {
                padding: 0.5em;
            }

            .poznamka {
                display: inline-block;
                width: 35%;
                height: 3em;
                border: 1px black solid;
            }

            .cislo_smlouvy {
                display: inline-block;
                width: 60%;
                height: 3.55em;
                border: 1px black solid;
            }

            .padding_right {
                padding-right: 3em;
            }

            .padding_left {
                padding-left: 3em;
            }

            .padding_top {
                padding-top: 2em;
            }

            .padding_right_long {
                padding-right: 20em;
            }

            .space_small {
                margin-top: 0.2em;
            }

            .space_medium {
                margin-top: 0.3em;
            }

            .space_big {
                margin-top: 0.5em;
            }

            .space_bigger {
                margin-top: 1em;
            }

            .border {
                border: 1px solid black;
            }

            .border_top {
                border-top: 1px solid black;
            }

            .border_bottom {
                border-bottom: 1px solid black;
            }

            .container_40 {
                width: 40%;
                padding: 0 2em;
                padding-top: 0.5em;
                margin: 0 1em;
                margin-top: 3em;
            }

            .container_47 {
                width: 47%;
                padding: 0.5em;
            }

            .text_center {
                text-align: center;
            }

            .space_for_note {
                margin-bottom: 15em;
            }

            .line {
                margin-top: 2em;
            }

            ol {
                margin-top: 0px;
                padding-top: 0px;
                margin-bottom: 0px;
                padding-bottom: 0px;
            }

            .alpha_list {
                list-style-type: lower-alpha;
            }

            .list_type_none {
                margin-left: 30px;
            }

            .explanations_container {
                line-height: 0.9;
            }

            .width_30 {
                width: 30%;
            }

            .width_80 {
                width: 80%;
            }

            .width_90 {
                width: 90%;
            }
            /* ################## ŽÁDOST O PŘEDČASNÉ SPLACENÍ MEZIÚVĚRU/ÚVĚRU ZE STAVEBNÍHO SPOŘENÍ #################### */

            .top_label {
                background-color: rgb(255, 255, 255);
                position: absolute;
                top: -1.5em;
                left: 1.5em;
            }

            .container_with_label>div.padding_top {
                padding-top: 3em;
            }

            .container_with_label {
                position: relative;
                margin-top: 2.5em;
            }

            .three_containers_center {
                margin-left: 5%;
            }

            .upozorneni ol {
                padding-left: 1em;
            }

            .upozorneni p {
                padding-top: 0.5em;
            }
            .space_for_signature{
                padding-top: 15em;
            }
            .note_predcasne_splaceni_uveru{
                height: 13em;
            }
            /* ################## ŽÁDOST O PŘEVOD FINANČNÍCH PROSTŘEDKŮ #################### */

            .prevod_financnich_prostredku sup {
                font-size: 0.75em;
            }

            .prevod_financnich_prostredku hr {
                height: 0.2em;
                background: black;
                border: 0;
            }

           .prevod_financnich_prostredku ol {
                padding-left: 0.5em;
                margin-left: 1em;
            }

            .no_padding {
                padding: 0;
            }

            .no_border_top {
                border-top: 0px;
            }
            .prevod_financnich_prostredku .first_page {
                min-height: 26.3cm;
            }

        </style>

    </head>
    <div>
        <!--<apex:image url="!displayBar" width="160" height="80" alt="Vertical bar chart"/>-->
        <div style="height: 80px; width: 320px; border: 1px solid black; display: inline-block;"></div>
        <apex:image url="{!$Resource.StavebniSporitelnaLogo}" width="160" height="80" style="float:right;"/>
    </div>

    <div>
        <apex:outputText value="{!displayText}" escape="false"/>
    </div>
    <div style=" content: '';
    clear: both;
    display: table;">

    </div>

    </html>
</apex:page>