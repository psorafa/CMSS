<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>OppRecordTypeEditable</fullName>
        <description>Changes opp record typ to Editable</description>
        <field>RecordTypeId</field>
        <lookupValue>Editable</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Opp Record Type Editable</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>OppRecordTypeNotEditable</fullName>
        <description>Changes opp record typ to NotEditable</description>
        <field>RecordTypeId</field>
        <lookupValue>NotEditable</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Opp Record Type Not Editable</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>OppEditable</fullName>
        <actions>
            <name>OppRecordTypeEditable</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 OR 2 OR 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>2</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>3</value>
        </criteriaItems>
        <description>When opportunity in stages 1, 2 and 3, the record type is Editable</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>OppNotEditable</fullName>
        <actions>
            <name>OppRecordTypeNotEditable</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>5</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>7</value>
        </criteriaItems>
        <description>When opportunity in stages 5 and 7, the record type is NotEditable</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
